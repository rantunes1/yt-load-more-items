{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "author": "Ricardo Antunes",
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "exclude_matches": [
        "*://*.youtube.com/embed/*"
      ],
      "js": [
        "scripts/yt-load-more-items.js"
      ],
       "css": [
        "styles/yt-load-more-items.css"
      ]
    }
  ],
  "permissions": [
    "*://*.youtube.com/*"
  ]

}
